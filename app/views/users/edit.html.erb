<h1>Editing User</h1>
<ul>
  <% form_for @user do |f| %>
      <div class="field">
        <%= f.label :login %>
        <%= f.text_field :login %>
      </div>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
  <% end %>
  <li><%= link_to 'Show', @user %> </li>
  <li><%= link_to 'Delete', @user,method: :delete %></li>
  <li><%= link_to 'Back', users_path %></li>
</ul>


